<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/layout_achievement_round_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Попал в топ пользователей"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/achievementScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:text="200 баллов"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/achievementPopupIcon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ach_entered_in_leaderboard" />

        <TextView
            android:id="@+id/achievementDescriprion"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="Выдаётся за попадание в топ пользователей"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/closePopupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/orange"
            android:text="Закрыть"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>