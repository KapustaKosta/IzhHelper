<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SendViolationActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sendViolationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:longClickable="false"
        android:onClick="sendViolation"
        android:src="@drawable/send"
        app:backgroundTint="#28ABB9"
        app:backgroundTintMode="add"
        app:tint="@color/white" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Проверьте правильность введённых данных"
                android:textColor="#303030"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/violationPlaceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Место: "
                android:textColor="#232323"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/violationTypeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тип нарушения: "
                android:textColor="#232323"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/violationCarNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Номер машины:"
                android:textColor="#232323"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>