<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CarNumberDetectionActivity">

    <ru.konstantin_starikov.samsung.izhhelper.views.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:visibility="invisible"
        app:backgroundTint="#000000"
        app:elevation="0dp"
        app:iconTint="#000000" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="235dp"
        android:text="Отмена"
        android:textColor="#2E2D2D"
        android:visibility="invisible"
        app:backgroundTint="#BFBFBF" />

    <TextView
        android:id="@+id/timerSecondsCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="200dp"
        android:text="10"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/carNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="300dp"
        android:text="номер автомобиля"
        android:textColor="#F6F6F6"
        android:textSize="18sp"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/informationLayout"
        android:layout_width="209dp"
        android:layout_height="81dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"
        android:background="#FFFFFF"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoText="true"
            android:background="#FFFFFF"
            android:gravity="right|left"
            android:singleLine="false"
            android:text="Номер машины должен  \nбыть в центре экрана"
            android:textColor="#1B1A1A" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>